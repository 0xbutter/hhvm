[
    {
      "jsonrpc": "2.0",
      "id": 1,
      "method": "initialize",
      "params":
        {
          "initializationOptions":{},
          "processId":null,
          "rootPath":"${root_path}",
          "capabilities":{}
        }
    },
    {
      "jsonrpc": "2.0",
      "method": "$test/waitForHhServerReady",
      "params": {}
    },
    {
      "jsonrpc": "2.0",
      "method": "textDocument/didOpen",
      "params": {
         "textDocument": {
           "uri":"${php_file_uri}",
           "languageId": "hack",
           "version":1,
           "text":"${php_file}"
         }
       }
    },
    {
      "jsonrpc": "2.0",
      "method": "textDocument/rangeFormatting",
      "id": 2,
      "params": {
          "textDocument": {
            "uri":"${php_file_uri}"
          },
          "range": {
            "start": {
              "line": 4,
              "character": 0
            },
            "end": {
                "line": 5,
                "character": 0
            }
          },
          "options": {"tabSize": 5, "insertSpaces": true}
       }
    },
    {
      "jsonrpc": "2.0",
      "id": 3,
      "method": "shutdown",
      "params": {}
    }
    ]
